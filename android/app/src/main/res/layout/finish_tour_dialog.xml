<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="40dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/pull_in_toss_type_icon"
        android:layout_width="@dimen/net_image_size"
        android:layout_height="@dimen/net_image_size"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:background="@drawable/blue_gradient_circle"
        android:padding="18dp"
        android:src="@drawable/ic_net_new"
        android:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/stat_const_view"
        app:layout_constraintBottom_toTopOf="@id/stat_const_view"
        android:translationZ="30dp"
        app:layout_constraintStart_toStartOf="@id/stat_const_view"
        app:layout_constraintEnd_toEndOf="@id/stat_const_view"
        />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/stat_const_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/big_space"
                android:layout_marginRight="@dimen/big_space"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/dialog_background"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <is.stokkur.afladagbok.android.widget.MaxHeightLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:maxHeight="550dp"
                    app:layout_constraintBottom_toTopOf="@+id/action_buttons"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <ScrollView
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/action_stop"
                                android:layout_marginTop="55dp"
                                android:textStyle="bold"
                                android:textColor="#33537F"
                                android:textSize="22sp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="30dp"
                                android:layout_marginBottom="24dp"
                                android:text="Það er ekki hægt að breyta skráningu eftir að þú hefur skilað inn áætluðum afla."
                                android:textColor="#525252"
                                android:textSize="15sp"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/extra_thin_line"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@color/colorGraySeparator" />
                            <include
                                android:id="@+id/statistic_detail_container"
                                layout="@layout/statistics_detail_screen" />
                        </LinearLayout>
                    </ScrollView>
                </is.stokkur.afladagbok.android.widget.MaxHeightLinearLayout>
                <LinearLayout
                    android:id="@+id/action_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/big_space"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >
                    <Button
                        android:id="@+id/btn_finish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/green_left_corner_btn"
                        android:text="@string/stop_tour_title"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp"
                        />
                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/red_right_corner_btn"
                        android:text="@string/cancel"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>